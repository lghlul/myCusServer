/**index.wxss**/
.container{position: relative;}
.answer-content{padding:26rpx 20rpx 10rpx;height:100%;box-sizing: border-box;}
.answer-userinfo-content{width:710rpx;height:208rpx;background-color:#217bdd;border-radius: 6rpx;}
.answer-login-box{position: absolute;left: 0;right: 0;top: 0;bottom: 0;background-color: rgba(0, 0, 0, 0.4);display: flex;justify-content: center;align-items: center;}
.answer-login-box .get-user-content{width:600rpx;height:280rpx;background-color: #ffffff;border-radius: 4rpx;}
.answer-login-box .get-user-content .get-user-box {display: flex;flex-direction: column;justify-content: center;align-items: center;height:184rpx;}
.answer-login-box .get-user-content .get-user-box .get-user-h{
font-size: 36rpx;line-height: 66rpx;color: #333333;
}
.answer-login-box .get-user-content .get-user-box .get-user-p{
  font-size: 30rpx;line-height: 58rpx;color: #888888;
}
.answer-login-box .get-user-content button[type=primary].answer-login-btn{background-color:#ffffff;color: #1bbb05;width:100%;line-height: 96rpx;height:96rpx;text-align: center;font-size: 36rpx;border:none;border-radius:0;border-top:1rpx solid #ededed;padding:0;}
.answer-userinfo-box{position: relative;margin-top: 42rpx;text-align: center;padding-top: 80rpx;}
.answer-userinfo-avatar-box{width:120rpx;height:120rpx;border-radius: 50%;position: absolute;top:-42rpx;left:0;right:0;margin: auto;overflow: hidden;z-index: 200;}
.answer-userinfo-avatar{width:100%;height:100%;vertical-align:top;display: block;}
.answer-userinfo-nickname{font-size: 32rpx;color: #ffffff;line-height: 60rpx;}
.answer-userinfo-points-box{display: flex;justify-content: center;align-items: center;}
.answer-userinfo-points{font-size: 26rpx;color:#ffffff;}
.answer-points-icon{width: 32rpx;height:32rpx;margin:0 12rpx;}
