.answer-module-content{width: 345rpx;}
.answer-module-box{width: 285rpx;border-radius: 6rpx;padding:26rpx 30rpx;overflow: hidden;}
.answer-module-box text{font-size: 34rpx;font-weight: bold;color: #ffffff;float:left;margin-bottom: 16rpx;text-shadow: 0 2px 4px rgba(0, 0, 0, 0.4);}
.answer-module-box image{float: right;}
