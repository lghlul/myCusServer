<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cad.mapper.VisitMapper">
 	
 	<select id="insert" parameterType="user" >
 		insert into t_user(userId,userAccount,userPwd,registerTime) values(#{userId},#{userAccount},#{userPwd},#{registerTime})
 	</select>
 	
 	
 	<select id="searchCount" parameterType="map" resultType="Integer" >
 		select count(userId) from t_user
 		<where>
			<if test="userAccount != null">
				and userAccount = #{userAccount}
			</if>
		</where>
	</select>
</mapper>