<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.answer.mapper.TBbsMapper">
    <select id="selectPage" parameterType="bbs" resultType="bbs">
      select *,(select count(1) from t_bbs_reply where bbsID = a.bbsID)as replyNum from t_bbs a
      <where>
      and delStatus = 1
          <if test="keyWord != null">
            and (title like concat("%" , #{keyWord} , "%") or content like concat("%",#{keyWord},"%"))
          </if>
          <if test="creator != null">
              and creator = #{creator}
          </if>
      </where>
    </select>


    <update id="update" parameterType="bbs">
      update t_bbs
      <set>
        <if test="delStatus != null">
            delStatus = #{delStatus},
        </if>
      </set>
      where bbsID = #{bbsID}
    </update>

</mapper>